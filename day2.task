Program 2 — Biggest of Two Numbers (Ternary)
#include <stdio.h>
int main() {
    int a = 10, b = 20;
    int big = (a > b) ? a : b;
    printf("Biggest = %d", big);
    return 0;
}

Program 3 — Biggest of Three Numbers
#include <stdio.h>
int main() {
    int a = 10, b = 20, c = 15;
    if(a > b) {
        if(a > c)
            printf("A is biggest");
        else
            printf("C is biggest");
    }
    else {
        if(b > c)
            printf("B is biggest");
        else
            printf("C is biggest");
    }
    return 0;
}
Program 4 — Calculator Using Switch
#include <stdio.h>
int main() {
    int a = 10, b = 5, ch = 3;
    switch(ch) {
        case 1: printf("Add = %d", a + b); break;
        case 2: printf("Sub = %d", a - b); break;
        case 3: printf("Mul = %d", a * b); break;
        case 4: printf("Div = %d", a / b); break;
        default: printf("Invalid Choice");
    }
    return 0;
}

